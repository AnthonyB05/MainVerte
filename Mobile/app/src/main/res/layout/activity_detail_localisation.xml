<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailLocalisationActivity"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewNameBalise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="NameBalise"
        android:layout_margin="16dp"
        style="@style/Title"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cette option permet d'initialiser la localisation d'une balise. Tenez vous proche de la balise et cliquez sur le bouton suivant :"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonLocaliser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Localiser"
            android:layout_marginTop="50dp"/>

    </LinearLayout>


</LinearLayout>